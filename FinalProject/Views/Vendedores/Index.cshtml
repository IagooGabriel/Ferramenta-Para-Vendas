@model IEnumerable<FinalProject.Models.Entity.Vendedor>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome_vend)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
